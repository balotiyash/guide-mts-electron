{
    "name": "guide-mts",
    "version": "1.0.0",
    "description": "An Electron application for Guide MTS",
    "author": "Yash Balotiya",
    "main": "main.js",
    "type": "module",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder --win --x64"
    },
    "devDependencies": {
        "electron": "^37.3.0",
        "electron-builder": "^26.0.12"
    },
    "build": {
        "appId": "com.balotiyash.app",
        "productName": "Guide MTS",
        "files": [
            "**/*",
            "!node_modules/fsevents/**"
        ],
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "license": "license.txt",
            "perMachine": false,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Guide MTS"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "balotiyash",
                "repo": "guide-mts-electron"
            }
        ]
    },
    "dependencies": {
        "electron-log": "^5.4.2",
        "electron-updater": "^6.6.2"
    }
}
